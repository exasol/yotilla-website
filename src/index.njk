    <div class="feature-icon d-inline-flex align-items-center justify-content-center text-bg-primary bg-gradient fs-2 mb-3">
      <i class="bi {{icon}}"></i>
    </div>
    <h3 class="fs-4 text-body-emphasis">{{featureTitle}}</h3>
    <p class="lead">{{text}}</p>
    <a href="{{href}}" class="icon-link">Discover more <i class="bi bi-chevron-right"></i></a>
  </div>
{% endmacro %}



